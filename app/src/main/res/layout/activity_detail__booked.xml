<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main"
    tools:context=".Pesanan.Detail_BookedActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_second" />

    <androidx.core.widget.NestedScrollView
        android:background="@drawable/topshape"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_margin="@dimen/_20sdp"
                    app:cardCornerRadius="@dimen/_12sdp">
                    <ImageView
                        android:id="@+id/imgBarang"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/website" />
                </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/namaBarang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Nama Barang"
                        android:textColor="?colorPrimary"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/hargaBarang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Rp. 100.000 /Hari"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/banyakBarang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="5 item"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Nama Pemilik "
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/namaPenyewa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/t1"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Audi Rahman"
                        android:textAlignment="textEnd"
                        android:textColor="?colorPrimary"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp">
                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Tanggal Penyewaan "
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tgl_awal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/t2"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Audi Rahman"
                        android:textAlignment="textEnd"
                        android:textColor="?colorPrimary"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Pengembalian "
                        android:textSize="16sp"
                        android:textColor="@color/dark_gray"
                        android:fontFamily="@font/poppins_semibold"/>

                    <TextView
                        android:id="@+id/tgl_akhir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/t3"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Audi Rahman"
                        android:textAlignment="textEnd"
                        android:textColor="?colorPrimary"
                        android:textSize="18sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/t4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alamat Penyewa "
                        android:textSize="16sp"
                        android:textColor="@color/dark_gray"
                        android:fontFamily="@font/poppins_semibold"/>
                    <TextView
                        android:id="@+id/alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/t4"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Audi Rahman"
                        android:textAlignment="textEnd"
                        android:textColor="?colorPrimary"
                        android:textSize="18sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/t6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Status Sewa "
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/statusSewa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/t6"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Audi Rahman"
                        android:textAlignment="textEnd"
                        android:textColor="?colorPrimary"
                        android:textSize="18sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/t7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Banyak Sewa "
                        android:textSize="16sp"
                        android:textColor="@color/dark_gray"
                        android:fontFamily="@font/poppins_semibold"/>
                    <TextView
                        android:id="@+id/ketBanyak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/t7"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Audi Rahman"
                        android:textAlignment="textEnd"
                        android:textColor="?colorPrimary"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/t8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Harga Sewa "
                        android:textSize="16sp"
                        android:textColor="@color/dark_gray"
                        android:fontFamily="@font/poppins_semibold"/>
                    <TextView
                        android:id="@+id/totalHarga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_toEndOf="@id/t8"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Audi Rahman"
                        android:textAlignment="textEnd"
                        android:textColor="?colorPrimary"
                        android:textSize="18sp" />
                </RelativeLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginHorizontal="@dimen/_20sdp">
                <LinearLayout
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_login"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jaminan Sewa"
                    android:textSize="16sp"
                    android:textColor="@color/dark_gray"
                    android:fontFamily="@font/poppins_semibold"
                    android:background="?android:windowBackground"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:paddingHorizontal="@dimen/_10sdp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_8sdp">
                    <ImageView
                        android:src="@drawable/website"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:id="@+id/imgJaminan"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:contentDescription="TODO" />
                </androidx.cardview.widget.CardView>




            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>